// File: tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",  // Node.js modules for extension
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "outDir": "out",  // Output to out/ for extension
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,  // Allow iteration over Map/Set/Array
    "moduleResolution": "node",  // Node.js resolution
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "backup",
    "src/prompter.ts",  // Exclude webview files
    "src/test*.ts"      // Exclude test files from builds
  ]
}